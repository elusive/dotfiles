{
    "languageserver": {
        "elmLS":{
            "command":"elm-language-server",
            "filetypes":["elm"],
            "rootPatterns":["elm.json"]
        },
        "csharp-ls": {
            "command": "csharp-ls",
            "filetypes": ["cs"],
            "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
        }
    },
    "go.goplsOptions": {
      "completeUnimported": true
    },
    "codeLens.enable":  true,
    "emmet.showAbbreviationSuggestions": true,
    "coc.preferences.formatOnSaveFiletypes": ["javascript", "json", "svelte", "typescript" ],
    "emmet.includeLanguages": { "jsx": "javascript-react" },
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.showExpandedAbbreviation": true,
    "snippets.loadFromExtensions": true
}
